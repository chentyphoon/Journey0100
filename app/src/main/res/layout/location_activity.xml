<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lv_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorUjMe"
            android:layout_margin="@dimen/lv_margin">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivlPic"
                android:layout_weight="0.03"
                android:layout_alignParentLeft="true"
                android:padding="1dp"
                android:layout_margin="@dimen/lv_margin"
                android:src="@drawable/ic_loc" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/edtName"
                android:layout_weight="0.97"
                android:hint="選擇或輸入地點"
                android:textColor="@color/colorlvTitle" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確定"
                android:id="@+id/btnOk" />

        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvLocation"
            android:padding="@dimen/lv_margin"
            android:layout_weight="0.5"
            android:background="@color/colorlvBack" />

    </LinearLayout>


</LinearLayout>